---
const response = await fetch('https://adriencaubel.substack.com/api/v1/posts/?limit=3');
const data = await response.json();
---

<section class="text-gray-600 body-font">
  <div class="grid grid-cols-3 gap-x-10">
    <div
    class="relative flex-col overflow-hidden rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
    <div class="relative m-0 overflow-hidden text-gray-700 bg-transparent rounded-none shadow-none bg-clip-border">
      <img
      src={data[0].cover_image}
      alt="blog" />
    </div>
    <div class="p-6">
      <h4 class="block font-sans text-2xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900">
        {data[0].title}
      </h4>
      <p class="block mt-3 font-sans text-xl antialiased font-normal leading-relaxed text-gray-700">
        {data[0].description}
      </p>
    </div>
    <div class="flex items-center justify-between p-6">
      <p class="block font-sans text-base antialiased font-normal leading-relaxed text-inherit">
        Read More
      </p>
    </div>
  </div> 

  <div
    class="relative flex-col overflow-hidden rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
