---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<h2>{title}</h2>
<div class="bordure"></div>

<style>
h2 {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    color: #ffffff;
    font-size: 28px;
}

.bordure {
    margin-top: 2px;
    border-bottom-style: solid;
    border-bottom-color: #f8c617;
    border-bottom-width: 2px;
    width: 8em;
    margin-bottom: 1em;
}
</style>